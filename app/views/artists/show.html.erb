<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&amp;times;</button>
        <h4 class="modal-title" id="myModalLabel">Book an appointment</h4>
      </div>
      <div class="modal-body">
        <div class="row form-appointment">
          <div class="col-xs-4 col-xs-offset-4">
            <%= simple_form_for [@artist, @appointment] do |f| %>
            <%= f.input :appointment_date, as: :string, input_html: { class: 'datepicker' } %>
            <div class="btn-group" data-toggle="buttons">
              <%= f.collection_radio_buttons :appointment_time, @time_slots, :first, :last, item_wrapper_class: 'btn btn-sm btn-default' %>
            </div>

            <%= f.input :photo, as: :attachinary %>

            <br><br>
            <%= f.button :submit, class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



<div class="text-center">
  <h3>Reviews of <%=@artist.name  %></h3>
  <%= link_to "Leave a Review", new_artist_review_path(@artist) %>
  <div>
    <% @artist.reviews.each do |review| %>
    <%= review.content %>
    <ul class="list-inline">
      <% review.rating.times do %>
      <li><i class="fa fa-star" aria-hidden="true" style="color: black"></i></li>
      <% end %>
      <% (5 - review.rating).times do %>
      <li><i class="fa fa-star-o" aria-hidden="true" style="color: black"></i></li>
      <% end %>
      <br>
      <br>
    </ul>
    <% end %>
  </div>
</div>



