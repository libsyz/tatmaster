<div class="wrapper-artists-show" >
  <div class="container-fluid">
    <h1><%=@artist.name%></h1>
    <h4><%= @artist.location %></h4>

    <h3>About <%= @artist.name %></h3>

    <p><%= Faker::Lorem.paragraph %></p>

    <h3><%= @artist.name %>'s portfolio</h3>

    <% image = Faker::Placeholdit.image("50x50", 'jpg')  %>

    <%= image_tag( "#{image}" , :alt => "rss feed") %>
  </div>
</div>

<div class="row form-appointment">
  <div class="col-xs-4 col-xs-offset-4">
    <%= simple_form_for [@artist, @appointment] do |f| %>
    <%= f.input :appointment_date, as: :string, input_html: { class: 'datepicker' } %>
    <div class="btn-group" data-toggle="buttons">
      <%= f.collection_radio_buttons :appointment_time, @time_slots, :first, :last, item_wrapper_class: 'btn btn-sm btn-default' %>
    </div>

    <%= f.input :photo, as: :attachinary %>

    <br><br>
    <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



<div class="text-center">
  <h3>Reviews of <%=@artist.name  %></h3>
  <% @artist.reviews.each do |review| %>
  <%= review.content %>
  <%= review.rating %>
  <% end %>
  <%= link_to "Leave a Review", new_artist_review_path(@artist) %>
</div>



<% content_for(:after_js) do %>
<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      weekStart: 1,
      todayBtn: true,
      startDate: "today",
      todayHighlight: true,
      format: "dd/mm/yyyy"
    });
  });
</script>
<% end %>

