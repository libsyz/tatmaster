
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1729655980662865',
      xfbml      : true,
      version    : 'v2.9'
    });
    FB.AppEvents.logPageView();
  };

  (function(d, s, id){
   var js, fjs = d.getElementsByTagName(s)[0];
   if (d.getElementById(id)) {return;}
   js = d.createElement(s); js.id = id;
   js.src = "//connect.facebook.net/en_US/sdk.js";
   fjs.parentNode.insertBefore(js, fjs);
 }(document, 'script', 'facebook-jssdk'));
</script>

<div class="container">

  <div class="col-sm-4 col-sm-offset-4 text-center margin-top-100px">
   <h3> Welcome Back! </h3>
   <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions margin-top-20">
    <%= f.button :submit, "Log in" %>
  </div>
  <% end %>
  <div class="margin-top-20">
    <a href="/users/auth/facebook"><img src="https://rewards.meritushotels.com/img/420GNbXtI43K6/images/facebook-login-blue.png" width="200px"/></a>
  </div>
</div>

</div>

